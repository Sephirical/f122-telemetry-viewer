{
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["es2020"],
    "target": "esnext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"],
    "experimentalDecorators": true,
    "sourceMap": true,
  },
  "include": ["src/*.ts", "src/**/*.ts"]
}